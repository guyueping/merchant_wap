.withdraw_page_box
  width 100%
  height 100%
  background-color #FFFFFF
  // padding-top 150px
  box-sizing border-box
  display flex
  flex-direction column
  .warn_text_box
    width 100%
    height 70px
    line-height 70px
    background-color #FFF9E7
    box-sizing border-box
    padding 0 30px
    font-size 24px
    color #BF7400
    .red
      color #FF4400
    .icon_box
      width 30px
      height 30px
      margin-right 10px
      background url('data:image/png;base64,') 0 0/100% 100% no-repeat
      position relative
    .toolTip
      transform scale(0)
      transform-origin 0 0
      translation transform 0.3s
      width 500px
      background #FFFFFF
      border-radius 8px
      box-shadow 0px 2px 10px 0px rgba(0, 0, 0, 0.1)
      padding 20px
      font-size 24px
      line-height 33px
      color rgba(0, 0, 0, 0.85)
      position absolute 
      top 50px
      left -20px
      &:before
        position absolute 
        content ''
        display block
        width 0
        height 0
        border 10px solid transparent 
        border-bottom 14px solid #FFFFFF
        top -22px
        left 24px
    .show_toolTip
      transform scale(1)
.inner_box
  flex 1
  padding-top 150px
  .withdraw_title
    height 42px
    font-size 30px
    color rgba(0, 0, 0, 0.85)
    line-height 42px
  .withdraw_amount
    height 117px
    font-size 100px
    font-family DINAlternate-Bold, DINAlternate
    font-weight bold
    color #474245
    line-height 117px
    margin 30px auto
    .withdraw_unit
      font-size 80px
      margin-right 20px
  .record_button
    // height 50px
    font-size 26px
    color #4F5AF7
    margin-bottom 200px
    padding 20px
    // line-height 50px
    text-align center
    &:after
      content ''
      display inline-block
      width 10px
      height 10px
      border-top 1px solid #4F5AF7
      border-right 1px solid #4F5AF7
      transform rotate(45deg)
      margin-left 4px
  .withdraw_button, .repay_button
    width 346px
    height 86px
    line-height 86px
    border-radius 8px
    border 1px solid #979797
    font-size 30px
    color #474245
    margin-bottom 40px
    text-align center
  .repay_button
    background #4F5AF7
    color #ffffff
    border 1px solid #4F5AF7



.indexPage_box 
  width 100%
  // height 300px
  height 100%
  overflow hidden
  position absolute
  top 0
  left 0
  .mainpagecontainer
    background-color #FFFFFF
    width 100%
    min-height 100%
    overflow-x hidden
    overflow-y auto
    -webkit-overflow-scrolling touch
    position absolute
    top -400px
    left 0
    bottom 0
    box-sizing border-box
  .scrollblank
    width 100%
    height 400px
    background #4D66FF


.login_page_box
  width 100%
  height 100%
  overflow hidden
  background-color #fff
  .top_box
    height 327px
    width 120%
    margin-left -10%
    overflow-x hidden
    background-color #4D66FF
    border-bottom-left-radius 50%
    border-bottom-right-radius 50%
    background linear-gradient(90deg, #4B64FD 0%, #533FE5 100%)
  .bird_logo
    width 145px
    height 148px
    display block
    margin -90px auto 0 auto
  .login_form_box
    width 100%
    box-sizing border-box
    padding 0 40px
    margin-top 100px
  .field_box
    border-bottom 1px solid #E8E8E8
    box-sizing border-box
    padding 30px 30px
    margin-bottom 10px
    .field_icon
      font-size 40px
      color rgba(0, 0, 0, 0.25)
    .fieldInput
      height 30px
      line-height 30px
      margin-left 20px
      font-size 30px
  .login_button
    width 100%
    margin 50px auto
    height 86px
    line-height 86px
    background #4F5AF7
    color #FFFFFF
    box-shadow 0px 2px 10px 0px #C6C7E1
    border 0 none
  .link_button_box
    font-size 26px
    color #4F5AF7
    width 100%
    height 40px
    padding 2px
    box-sizing border-box
  .divide
    width 1px
    height 24px
    margin 0 30px
    background-color #4F5AF7
  .link_button
    display flex
    align-items center
    &:after
      content ''
      display inline-block
      width 10px
      height 10px
      border-top 1px solid #4F5AF7
      border-right 1px solid #4F5AF7
      transform rotate(45deg)
      margin-left 6px

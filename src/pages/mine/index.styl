.minePage_box
  width 100%
  height 100%
  overflow-y auto
  overflow-x hidden
  font-family PingFangSC-Regular, PingFang SC
  font-size 30px
  color rgba(0, 0, 0, 0.85)
  .topBox
    width 110%
    margin-left -5%
    height 160px 
    background linear-gradient(#4F5AF7 0%, #553BE2 100%)
    border-bottom-left-radius 50%
    border-bottom-right-radius 50%

  .merchant_info_box
    width 92%
    // height 158px
    border-radius 20px
    box-sizing border-box
    padding 8px 24px
    margin -114px auto 20px auto
    background-color #FFFFFF
    .at-list__item
      .item-thumb
        width 100px
        height 100px
  .items_box
    width 92%
    // height 232px
    border-radius 20px
    box-sizing border-box
    padding 10px 24px
    margin 0 auto 40px auto
    background-color #FFFFFF
    .at-list__item
      .item-thumb
        width 38px
        height 38px
  .quit_button
    width 92%
    margin 0 auto
    height 86px
    line-height 86px
    background #FFFFFF
    box-shadow 0px 2px 8px 0px #E5E5E5
    border 0 none
  .at-list__item
    -webkit-tap-highlight-color transparent
    -webkit-appearance none
    -webkit-user-select none
    -webkit-touch-callout none
    &:last-child
      &:after
        border-bottom 0
    .item-extra__icon-arrow 
      font-size 40px
  .at-list
    &:after
      border-top-width 0
      border-bottom-width 0

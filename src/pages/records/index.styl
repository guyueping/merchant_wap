.accountPage_box
  width 100%
  height 100%
  background-color #F8F8F8
  // position relative
  box-sizing border-box
  // flex-direction column
  overflow hidden
  // display flex
  .condition_box
    width 100%
    height 82px
    // padding 0 5%
    background-color #FFFFFF
    font-size 30px
    // box-shadow 0 2px 5px #EEEEEE
    .selection,.selection_open
      width 50%
      &:after
        content ''
        display inline-block
        width 0
        height 0
        border 8px solid transparent 
        border-top 10px solid rgba(0, 0, 0, 0.85)
        margin-left 10px
        transform rotate(0deg) translateY(2px)
        transition 0.2s transform
    .selection_open
      &:after
        transform rotate(-180deg) translateY(7px)
  .summarybox
    padding 5px 30px 15px 30px
    font-size 30px
    .month_text
      font-size 60px
      line-height 70px
    .small_text
      color #969696
      line-height 37px
      font-size 26px
  .tag_box
    box-sizing border-box
    padding 20px

  .scroll_view_box
    position absolute
    top 82px
    left 0
    right 0
    bottom 0
    // height 300px
    // background-color #FFFFFF
  .at-tabs__item-underline
    height 2px
    bottom 6px
  .at-tabs__item--active 
    color #474245
    font-weight 500
    .at-tabs__item-underline
      transform scaleX(0.4)
  .at-tabs__item  
    color #474245
    font-weight 400
  
   



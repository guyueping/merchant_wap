.pwd_page_box
  width 100%
  height 100%
  overflow hidden
  
  .pwd_form_box
    width 100%
    box-sizing border-box
    padding-top 30px
    background-color #fff
  .field_box
    box-sizing border-box
    padding 30px 30px 30px 0
    margin 0 0 10px 40px
    font-size 30px
    .fieldLabel
      width 180px
    .fieldInput
      height 30px
      line-height 30px
      margin-left 20px
      font-size 30px
      flex 1
    .verifyCode_btn
      color #4F5AF7
    &:not(:last-child)
      border-bottom 1px solid #E8E8E8
  .confirm_button
    margin 50px 40px
    height 86px
    line-height 86px
    background #4F5AF7
    color #FFFFFF
    box-shadow 0px 2px 10px 0px #C6C7E1
    border 0 none
  .error_msg
    line-height 40px
    font-size 28px
    color #FF3B30
    margin 0 40px
    display flex
    .err_icon
      margin 6px 8px 0 0



.withdraw_page_box
  width 100%
  min-height 100%
  background-color #F8F8F8
  font-family PingFangSC-Regular, PingFang SC
  .warn_text_box
    width 100%
    height 70px
    line-height 70px
    background-color #FFF9E7
    box-sizing border-box
    padding 0 30px
    font-size 24px
    color #BF7400
    .red
      color #FF4400
    .icon_box
      width 30px
      height 30px
      margin-right 10px
      background url('data:image/png;base64,') 0 0/100% 100% no-repeat
      position relative
    .toolTip
      transform scale(0)
      transform-origin 0 0
      translation transform 0.3s
      width 500px
      background #FFFFFF
      border-radius 8px
      box-shadow 0px 2px 10px 0px rgba(0, 0, 0, 0.1)
      padding 20px
      font-size 24px
      line-height 33px
      color rgba(0, 0, 0, 0.85)
      position absolute 
      top 50px
      left -20px
      &:before
        position absolute 
        content ''
        display block
        width 0
        height 0
        border 10px solid transparent 
        border-bottom 14px solid #FFFFFF
        top -22px
        left 24px
    .show_toolTip
      transform scale(1)
.withdraw_page_container
  padding 30px
  width 100%
  box-sizing border-box
  .card_box
    width 100%
    height 435px
    border-radius 12px
    overflow hidden
    background-color #FFFFFF
  .card_head
    width 100%
    height 144px
    background linear-gradient(135deg, #372AFE 0%, #4537FC 100%)
    border-radius 12px 12px 0px 0px
    box-sizing border-box
    padding 31px 24px
    color #FFFFFF
    font-size 28px
    display flex
    .card_info
      margin-left 89px
      .card_num
        font-family PingFangSC-Medium, PingFang SC
        font-weight 500
      .time
        font-size 26px
        margin-top 5px


  .card-body
    box-sizing border-box
    padding 24px
    .amount_label
      font-size 28px
      line-height 40px
      margin-top 4px
    .amount
      font-size 48px
      height 67px
      margin 25px 0
      padding 25px 0
      border-bottom 1px solid #E8E8E8
    .amountInput
      font-size 48px
      height 50px
      line-height 50px
      margin-left 12px
    .amount_limit
      font-size 22px
      color rgba(0, 0, 0, 0.45)
      line-height 30px
    .all_withdraw
        color #4F5AF7
        margin-left 10px
  .withdraw_button
    width 100%
    margin 50px auto 25px auto
    height 86px
    line-height 86px
    color #ffffff
    background #4F5AF7
    box-shadow 0px 2px 8px 0px #E5E5E5
    // background #FFFFFF
    // box-shadow 0px 2px 8px 0px #E5E5E5
    border 0 none
  .remind_box
    width 100%
    font-size 22px
    color rgba(0, 0, 0, 0.45)
    line-height 30px
    .title
      color rgba(208, 51, 51, 0.85)
      margin-bottom 10px


  